@model ProductDto
<form asp-controller="Product" asp-action="Add" method="post">
    <div class="row">
        <div class="col-8">
            <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="small text-danger"></span>
        </div>
        <div class="row">
        <div class="col-8">
            <label asp-for="Type"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="small text-danger"></span>
        </div>

        <div class="col-8">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>

        <div class="col-8">
            <label asp-for="Filename"></label>
            <input asp-for="Filename" class="form-control" />
            <span asp-validation-for="Filename" class="small text-danger"></span>
        </div>

        <div class="col-8">
            <label asp-for="Height"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="small text-danger"></span>
        </div>

        <div class="col-8">
            <label asp-for="Width"></label>
            <input asp-for="Width" class="form-control" />
            <span asp-validation-for="Width" class="small text-danger"></span>
        </div>

         <div class="col-8">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="small text-danger"></span>
        </div>

        <div class="col-8">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="small text-danger"></span>
        </div>
        </div>
        <button type="submit" class="btn btn-success mt-2">Submit</button>

    </div>
</form>

            @section Scripts{
                <partial name="_ValidationScriptsPartial"/>
            }